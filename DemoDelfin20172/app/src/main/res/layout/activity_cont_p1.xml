<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/fondoContP1"
    tools:context="com.example.jesus.demodelfin2017.ContP1">

            <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/Toolbar"
                android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:background="@color/colorFondo"
                android:layout_height="250px">
                <ImageView
                    android:layout_gravity="right"
                    android:layout_width="1000px"
                    android:layout_height="match_parent"
                    android:src="@drawable/loginlogo"/>
            </android.support.design.widget.CollapsingToolbarLayout>

            <RelativeLayout
                android:layout_marginTop="250px"
                android:layout_alignParentTop="@id/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <!-- Code -->
                <!-- Code -->
                <!-- Code -->
            </RelativeLayout>


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="300px">
                <LinearLayout
                    android:layout_marginTop="50px"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:weightSum="3"
                    android:background="@color/blanco"
                    android:layout_height="250px">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/notifi"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/NotInac"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/camera"
                            android:elevation="2dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/CamaraInac"/>
                        <ImageView
                            android:layout_marginTop="-111dp"
                            android:layout_gravity="center"
                            android:layout_width="500px"
                            android:layout_height="500px"
                            android:src="@drawable/forma"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0px"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/settings"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/ConfInac"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


</RelativeLayout>
